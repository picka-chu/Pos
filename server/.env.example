# VelvetPOS Environment Configuration
# Copy this file to .env and fill in your values

# ==================== FIREBASE CONFIGURATION ====================
# Get these values from your Firebase Console
# Project Settings > Service Accounts > Generate New Private Key

# Firebase Project ID
FIREBASE_PROJECT_ID=your-project-id

# Database URL (Realtime Database)
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Service Account Credentials
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_ID=your-client-id

# Alternative: Use credential file path
# FIREBASE_CREDENTIALS_PATH=/path/to/serviceAccountKey.json

# ==================== APPLICATION CONFIGURATION ====================

# Environment: development | staging | production
ENVIRONMENT=development

# Server Port
PORT=5000

# Debug Mode (True/False) - Only use in development
DEBUG=True

# ==================== OPTIONAL CONFIGURATIONS ====================

# JWT Token Expiration (in seconds)
JWT_EXPIRATION=3600

# Rate Limiting (requests per minute)
RATE_LIMIT=100

# Session Secret Key (generate a strong random key for production)
SESSION_SECRET=your-super-secret-key-change-in-production

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=*
